{
  "name": "JSON Viewer Plus",
  "version": "2.1.0",
  "manifest_version": 3,
  "author": "Quentin Lienhardt",
  "description": "The most beautiful and customizable JSON/JSONP highlighter that your eyes have ever seen.",
  "homepage_url": "https://github.com/QuentiumYT/JSONViewerPlus",
  "minimum_chrome_version": "100",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/viewer.css",
        "assets/viewer-alert.css",
        "pages/options.html",
        "pages/omnibox.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "offline_enabled": true,
  "omnibox": {
    "keyword": "json-viewer"
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "js": [
        "assets/viewer.js"
      ],
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "assets/backend.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*",
    "<all_urls>"
  ]
}
